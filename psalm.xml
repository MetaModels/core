    </PossiblyNullArgument>
    <MixedAssignment>
      <errorLevel type="suppress">
        <file name="vendor/contao/core-bundle/src/Resources/contao/library/Contao/Widget.php"/>
      </errorLevel>
    </MixedAssignment>
    <TooManyArguments>
      <errorLevel type="suppress">
