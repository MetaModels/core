{
  "name": "metamodels/core",
  "description": "MetaModels core",
  "keywords": [
    "contao",
    "metamodels",
    "core"
  ],
  "type": "contao-module",
  "homepage": "http://now.metamodel.me/",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de",
      "homepage": "http://www.cyberspectrum.de",
      "role": "Developer"
    },
    {
      "name": "Stefan Heimes",
      "email": "stefan_heimes@hotmail.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "mail@metamodel.me",
    "issues": "https://github.com/MetaModels/core/issues",
    "wiki": "http://de.contaowiki.org/MetaModels",
    "irc": "irc://irc.freenode.org/contao.mm",
    "source": "https://github.com/MetaModels/core"
  },
  "require": {
    "php": ">=5.6",
    "contao/core-bundle": "~4.4",
    "contao-community-alliance/dc-general": "~2.1@dev",
    "menatwork/contao-multicolumnwizard": "3.3.10",
    "contao-community-alliance/meta-palettes": "~1.7",
    "discordier/justtextwidgets": "dev-hotfix/contao4-compatibility",
    "contao-community-alliance/url-builder": "~1.3@dev",
    "contao-community-alliance/dependency-container": "~2.0@dev",
    "contao-community-alliance/event-dispatcher": "~2.0@dev",
    "contao-community-alliance/events-contao-bindings": "~4.0@dev",
    "doctrine/cache": "~1.6"
  },
  "require-dev": {
    "cyberspectrum/contao-toolbox": "~0.6",
    "phpcq/all-tasks": "~1.1",
    "metamodels/base-unit-tests": "~1.0",
    "metamodels/phpunit-contao-database": "~1.0"
  },
  "autoload": {
    "psr-0": {
      "MetaModels\\": "src"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "MetaModels\\Test\\": "tests"
    }
  },
  "extra": {
    "contao": {
      "sources": {
        "contao": "system/modules/metamodels"
      },
      "transifex": {
        "project": "metamodels",
        "prefix": "core-",
        "languages_cto": "contao/languages",
        "languages_tx": ".tx"
      },
      "runonce": [
        "runonce/runonce.php"
      ]
    },
    "branch-alias": {
      "dev-master": "2.0.x-dev",
      "dev-develop": "2.1.x-dev",
      "dev-feature/contao4": "2.2.x-dev"
    }
  }
}
